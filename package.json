{
  "name": "express-performance-monitor",
  "description": "Realtime monitor for Express server appliations",
  "version": "2023.6.21",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/express-performance-monitor.git"
  },
  "scripts": {
    "test": "rimraf coverage && jest --coverage",
    "dev": "tsc -w --module commonjs --outDir dist/cjs & nodemon . && npm run copy:public",
    "lint": "eslint ./src",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs && npm run copy:public",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "copy:public": "cp -R public dist/public",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "node",
    "status",
    "monitoring",
    "express",
    "charts",
    "performance"
  ],
  "author": {
    "name": "Simone Gauli",
    "email": "simonegauli@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.4",
    "handlebars": "^4.7.7",
    "on-headers": "^1.0.2",
    "pidusage": "^3.0.2"
  },
  "peerDependencies": {
    "socket.io": "^4.7.1"
  },
  "optionalDependencies": {
    "event-loop-stats": "^1.4.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.3",
    "@types/on-headers": "^1.0.0",
    "@types/pidusage": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "express": "^4.18.2",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "socket.io": "^4.7.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
